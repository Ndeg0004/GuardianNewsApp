<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Increased text size -->


    <Switch
        android:id="@+id/switchDarkMode"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="150dp"
        android:checked="false"
        android:text="Dark Mode"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textFontSizeLabel"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchDarkMode"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:text="Font Size"
        android:textSize="30sp" />

    <SeekBar
        android:id="@+id/seekBarFontSize"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/textFontSizeLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="59dp"
        android:layout_toStartOf="@id/textFontSizeValue"
        android:max="100"
        android:progress="50" />


    <TextView
        android:id="@+id/textFontSizeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchDarkMode"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="12dp"
        android:text="50"
        android:textSize="20sp" /> <!-- Increased text size -->

</RelativeLayout>
